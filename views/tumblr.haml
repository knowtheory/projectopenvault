%html
  %head
    %title= "{Title}"
    %link(href='http://fonts.googleapis.com/css?family=Alegreya:400italic,400,700|Alegreya+SC' rel='stylesheet' type='text/css')
    %link(type="text/css" rel="stylesheet" media="screen" href="/assets/mockup.css")
    %script(charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js")
    %script(charset="utf-8" src="/assets/lib/jquery-1.7.2.min.js")
    %script(charset="utf-8" src="/assets/lib/underscore-1.3.3.js")
    %script(charset="utf-8" src="/assets/lib/backbone-0.9.2.js")
    %script(charset="utf-8" src="/assets/initialize.js")    
    %script(charset="utf-8" src="/assets/models/buy.js")
    %script(charset="utf-8" src="/assets/models/candidate.js")
    %script(charset="utf-8" src="/assets/models/committee.js")
    %script(charset="utf-8" src="/assets/views/interactives.js")
    %script(charset="utf-8" src="/assets/views/interactives/spending_badge.js")
    %script(charset="utf-8" src="/assets/views/interactives/spending.js")
    %script(charset="utf-8" src="/assets/views/interactives/committee.js")
    %script(charset="utf-8" src="/assets/pov.js")    
    
    %script="POV.host = 'http://localhost:9292'" if ENV['RACK_ENV']=="development"
  %body
    #layout
      #header
        #masthead
          %a(href='/')
            %img(src='http://knowtheory.net/assets/tumblr-mockup.png')
            %h1
              Project OpenVault
              %p.meta Election coverage for Mid-Missouri
        #aggregate
          %p#total_runtime
            %span.value= @buys.sum(:total_runtime)
            %span.description Of ads run

          %p#total_spent
            %span.value= @buys.sum(:total_cost)
            %span.description Spent on ads

      #interactives
        #spending
          .navigation
          .content
      #main
        %h2 Election News &amp; Analysis
        #posts=yield
		


      #side-bar
        #question
          %h2 Let Us Know
          %h3 Who do you think has the best photo?
          #response
            %label
              %input(type='radio' name="response")
              Claire McCaskill
            %label
              %input(type='radio' name="response")
              John Brunner
            %label
              %input(type='radio' name="response")
              Sarah Steelman
            %textarea

        #twitter
          %h2
            Twitter
            %span #midmovotes
            %script
              new TWTR.Widget({            |
                version: 2,                |
                type: 'search',            |
                search: '#midmovotes',     |
                interval: 30000,           |
                title: '',                 |
                subject: '',               |
                width: 250,                |
                height: 300,               |
                theme: {                   |
                  shell: {                 |
                    background: '#8ec1da', |
                    color: '#ffffff'       |
                  },                       |
                  tweets: {                |
                    background: '#ffffff', |
                    color: '#444444',      |
                    links: '#1985b5'       |
                  }                        |
                },                         |
                features: {                |
                  scrollbar: false,        |
                  loop: true,              |
                  live: true,              |
                  behavior: 'default'      |
                }                          |
              }).render().start();


	
	
      #footer
        #navigation	
          %a(href="{PreviousPage}") « Newer
          %JumpPagination(length=5)
          %span(class="{current_page}") {PageNumber}
          %JumpPage
          %a.pagenumber(href="{URL}") {PageNumber}
          %a(href="{NextPage}") Older »
          %p.line
    
        .logos
          %img.logos(src='http://knowtheory.net/assets/logos/the%20Missourian50px.jpeg')
          %img.logos(src='http://knowtheory.net/assets/logos/kbia50px.jpeg')
          %img.logos(src='http://knowtheory.net/assets/logos/NewsyLogonew50px.jpg')
          %img.logos(src='http://knowtheory.net/assets/logos/KOMUnews50px.jpeg')
          %img.logos(src='http://knowtheory.net/assets/logos/rji50px.jpeg')

        #colophon
          %p Copyright etc        
        %p.line