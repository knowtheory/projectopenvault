%html
  %head
    %title= "{Title}"
    %link(href='http://fonts.googleapis.com/css?family=Alegreya:400italic,400,700|Alegreya+SC' rel='stylesheet' type='text/css')
    %link(type="text/css" rel="stylesheet" media="screen" href="/assets/mockup.css")
    %script(charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js")
    %script(charset="utf-8" src="/assets/lib/jquery-1.7.2.min.js")
    %script(charset="utf-8" src="/assets/lib/underscore-1.3.3.js")
    %script(charset="utf-8" src="/assets/lib/backbone-0.9.2.js")
    %script(charset="utf-8" src="/assets/pov.js")    
    %script(charset="utf-8" src="/assets/models/buy.js")
    %script(charset="utf-8" src="/assets/models/candidate.js")
    %script(charset="utf-8" src="/assets/views/buy.js")
    %script(charset="utf-8" src="/assets/views/candidate.js")
  %body
    #layout
      #header
        #masthead
          %h1
            %img(src='http://knowtheory.net/assets/tumblr-mockup.png')
            Project OpenVault
          %p.meta Election coverage for Mid-Missouri
        #aggregate
          %p#total_runtime
            %span.value= @buys.sum(:total_runtime)
            %span.description Of ads run

          %p#total_spent
            %span.value= @buys.sum(:total_cost)
            %span.description Spent on ads

      #interactives
        .navigation
          %p.title Total Spending
          #facets
            %span.active Candidates
            %span Committee
            %span Office
        .content
          .badge
            %img.headshot(src='/assets/peter_kinder_headshot.jpg')
            .info
              %p.name Peter Kinder
              %p.office for Lt. Governor
              %p.dollars-spent $28,245
          .badge
            %img.headshot(src='/assets/mccaskill_headshot.jpg')
            .info
              %p.name Claire McCaskill
              %p.office for U.S. Senate
              %p.dollars-spent $191,536
          .badge
            %img.headshot(src='/assets/john_brunner_headshot.jpg')
            .info
              %p.name John Brunner
              %p.office for U.S. Senate
              %p.dollars-spent $146,975
          .badge
            %img.headshot(src='/assets/sarah_steelman_headshot.jpg')
            .info
              %p.name Sarah Steelman
              %p.office for U.S. Senate
              %p.dollars-spent $47,020
          .badge
            %img.headshot()
            .info
              %p.name Candidate
              %p.office for U.S. House District 4
              %p.dollars-spent $191,536
          .badge
            %img.headshot()
            .info
              %p.name Candidate
              %p.office for U.S. Senate
              %p.dollars-spent $191,536
      
      #main
        %h2 Election News &amp; Analysis
        #posts=yield


      #side-bar
        #question
          %h2 Let Us Know
          %h3 Who do you think has the best photo?
          #response
            %label
              %input(type='radio' name="response")
              Claire McCaskill
            %label
              %input(type='radio' name="response")
              John Brunner
            %label
              %input(type='radio' name="response")
              Sarah Steelman
            %textarea

        #twitter
          %h2
            Twitter
            %span #midmovotes
            %script
              new TWTR.Widget({            |
                version: 2,                |
                type: 'search',            |
                search: '#midmovotes',     |
                interval: 30000,           |
                title: '',                 |
                subject: '',               |
                width: 250,                |
                height: 300,               |
                theme: {                   |
                  shell: {                 |
                    background: '#8ec1da', |
                    color: '#ffffff'       |
                  },                       |
                  tweets: {                |
                    background: '#ffffff', |
                    color: '#444444',      |
                    links: '#1985b5'       |
                  }                        |
                },                         |
                features: {                |
                  scrollbar: false,        |
                  loop: true,              |
                  live: true,              |
                  behavior: 'default'      |
                }                          |
              }).render().start();

      #footer
        #colophon
          %p Copyright etc
